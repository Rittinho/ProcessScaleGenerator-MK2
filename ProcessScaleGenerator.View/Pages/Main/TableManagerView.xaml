<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProcessScaleGenerator.View.Pages.Main.TableManagerView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:ProcessScaleGenerator.View.Components.Buttons"
    xmlns:elements="clr-namespace:ProcessScaleGenerator.View.Components.Elements"
    x:Name="Root"
    NavigationPage.HasNavigationBar="False">

    <Grid ColumnDefinitions="*,4*">

        <Border BackgroundColor="{DynamicResource NavBar}" StrokeThickness="0">

            <Grid
                Padding="5"
                RowDefinitions="*,Auto"
                RowSpacing="5">
                <VerticalStackLayout Spacing="5">

                    <buttons:IconButton
                        BackgroundColorCode="Transparent"
                        Event="{Binding SwitchToDashboardCommand}"
                        FontColorCode="{DynamicResource InversePrimaryText}"
                        FontSize="20"
                        TextContent="Dashboard"
                        Unicode="{DynamicResource FAS_Gear}" />

                    <buttons:IconButton
                        BackgroundColorCode="Transparent"
                        Event="{Binding SwitchToProcessesManagerCommand}"
                        FontColorCode="{DynamicResource InversePrimaryText}"
                        FontSize="20"
                        TextContent="Processos"
                        Unicode="{DynamicResource FAS_Gear}" />

                    <buttons:IconButton
                        BackgroundColorCode="Transparent"
                        Event="{Binding SwitchToEmployeersManagerCommand}"
                        FontColorCode="{DynamicResource InversePrimaryText}"
                        FontSize="20"
                        TextContent="Colaboradores"
                        Unicode="{DynamicResource FAS_Gear}" />

                    <Border
                        BackgroundColor="{DynamicResource SelectedNavBar}"
                        StrokeThickness="0"
                        Style="{StaticResource Border.Radius8}">

                        <HorizontalStackLayout>

                            <Label
                                FontSize="20"
                                Text="{DynamicResource FAS_Gear}"
                                TextColor="{DynamicResource InversePrimaryText}" />
                            <Label
                                FontSize="20"
                                Text="Configurar tabela"
                                TextColor="{DynamicResource InversePrimaryText}" />

                        </HorizontalStackLayout>

                    </Border>

                    <buttons:IconButton
                        BackgroundColorCode="Transparent"
                        Event="{Binding SwitchToShowTablesCommand}"
                        FontColorCode="{DynamicResource InversePrimaryText}"
                        FontSize="20"
                        TextContent="Visualizar tabela"
                        Unicode="{DynamicResource FAS_Gear}" />

                </VerticalStackLayout>

                <buttons:IconButton
                    Grid.Row="1"
                    BackgroundColorCode="Transparent"
                    Event="{Binding SwitchToSettingsCommand}"
                    FontColorCode="{DynamicResource InversePrimaryText}"
                    FontSize="20"
                    TextContent="Configurações"
                    Unicode="{DynamicResource FAS_Gear}" />

            </Grid>

        </Border>

        <Border
            Grid.Column="1"
            Padding="0"
            BackgroundColor="{DynamicResource Secondary}"
            StrokeThickness="0">

            <Grid Padding="20,20,5,5" RowDefinitions="Auto,*">

                <Label
                    FontAttributes="Bold"
                    FontSize="35"
                    Text="Visibilidade da tabela"
                    TextColor="{DynamicResource PrimaryText}" />

                <Grid
                    Grid.Row="1"
                    ColumnDefinitions="*,1.5*"
                    ColumnSpacing="10">

                    <Border BackgroundColor="{DynamicResource Primary}" Style="{DynamicResource Border.Radius14}">

                        <Grid RowDefinitions="Auto,Auto,*" RowSpacing="5">

                            <buttons:SearchBar SearchText="{Binding SearchProcessText, Mode=TwoWay}" />

                            <HorizontalStackLayout
                                Grid.Row="1"
                                HorizontalOptions="End"
                                Spacing="10">

                                <buttons:IconButton
                                    BackgroundColorCode="{DynamicResource Normal}"
                                    Event="{Binding ShowProcessHiddedsCommand}"
                                    FontSize="13"
                                    TextContent="Mostrar ocultados"
                                    Unicode="{DynamicResource FAS_EyeLowVision}" />

                                <buttons:IconButton
                                    BackgroundColorCode="{DynamicResource Success}"
                                    Event="{Binding ClearProcessHiddedsCommand}"
                                    FontSize="13"
                                    TextContent="Marcar todos"
                                    Unicode="{DynamicResource FAS_Broom}" />

                                <buttons:IconButton
                                    BackgroundColorCode="{DynamicResource Error}"
                                    Event="{Binding ClearProcessHiddedsCommand}"
                                    FontSize="13"
                                    TextContent="Limpar"
                                    Unicode="{DynamicResource FAS_Broom}" />

                            </HorizontalStackLayout>

                            <CollectionView
                                Grid.Row="2"
                                HorizontalOptions="Fill"
                                ItemTemplate="{DynamicResource ToastProcessSelectStyle}"
                                ItemsSource="{Binding FiltredProcessList}"
                                SelectionMode="None"
                                VerticalOptions="Fill"
                                VerticalScrollBarVisibility="Never">

                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout
                                        Orientation="Vertical"
                                        Span="1"
                                        VerticalItemSpacing="5" />
                                </CollectionView.ItemsLayout>

                            </CollectionView>

                        </Grid>

                    </Border>

                    <Border
                        Grid.Column="1"
                        BackgroundColor="{DynamicResource Primary}"
                        Style="{DynamicResource Border.Radius14}">

                        <Grid RowDefinitions="Auto,Auto,*" RowSpacing="5">

                            <buttons:SearchBar SearchText="{Binding SearchEmployeeText, Mode=TwoWay}" />

                            <HorizontalStackLayout
                                Grid.Row="1"
                                HorizontalOptions="End"
                                Spacing="10">

                                <buttons:IconButton
                                    BackgroundColorCode="{DynamicResource Normal}"
                                    Event="{Binding ShowEmployeeHiddedsCommand}"
                                    FontSize="13"
                                    TextContent="Mostrar ocultados"
                                    Unicode="{DynamicResource FAS_EyeLowVision}" />

                                <buttons:IconButton
                                    BackgroundColorCode="{DynamicResource Success}"
                                    Event="{Binding ClearProcessHiddedsCommand}"
                                    FontSize="13"
                                    TextContent="Marcar todos"
                                    Unicode="{DynamicResource FAS_Broom}" />

                                <buttons:IconButton
                                    BackgroundColorCode="{DynamicResource Error}"
                                    Event="{Binding ClearEmployeeHiddedsCommand}"
                                    FontSize="13"
                                    TextContent="Limpar"
                                    Unicode="{DynamicResource FAS_Broom}" />

                            </HorizontalStackLayout>

                            <CollectionView
                                Grid.Row="2"
                                HorizontalOptions="Fill"
                                ItemTemplate="{DynamicResource ToastEmployeeSelectStyle}"
                                ItemsSource="{Binding FiltredEmployeeList}"
                                SelectionMode="None"
                                VerticalOptions="Fill"
                                VerticalScrollBarVisibility="Never">

                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout
                                        Orientation="Vertical"
                                        Span="1"
                                        VerticalItemSpacing="5" />
                                </CollectionView.ItemsLayout>

                            </CollectionView>

                        </Grid>

                    </Border>

                </Grid>
            </Grid>

        </Border>

    </Grid>

</ContentPage>