<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProcessScaleGenerator.View.Pages.Main.EmployeeManagerView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:ProcessScaleGenerator.View.Components.Buttons"
    xmlns:elements="clr-namespace:ProcessScaleGenerator.View.Components.Elements"
    x:Name="Root"
    NavigationPage.HasNavigationBar="False">

    <Grid ColumnDefinitions="*,4*">

        <Border BackgroundColor="{DynamicResource NavBar}" StrokeThickness="0">

            <Grid
                Padding="5"
                RowDefinitions="*,Auto"
                RowSpacing="5">
                <VerticalStackLayout Spacing="5">

                    <buttons:IconButton
                        BackgroundColorCode="Transparent"
                        Event="{Binding SwitchToDashboardCommand}"
                        FontColorCode="{DynamicResource InversePrimaryText}"
                        FontSize="20"
                        TextContent="Dashboard"
                        Unicode="{DynamicResource FAS_Gear}" />

                    <buttons:IconButton
                        BackgroundColorCode="Transparent"
                        Event="{Binding SwitchToProcessesManagerCommand}"
                        FontColorCode="{DynamicResource InversePrimaryText}"
                        FontSize="20"
                        TextContent="Processos"
                        Unicode="{DynamicResource FAS_Gear}" />

                    <Border
                        BackgroundColor="{DynamicResource SelectedNavBar}"
                        StrokeThickness="0"
                        Style="{StaticResource Border.Radius8}">

                        <HorizontalStackLayout>

                            <Label
                                FontSize="20"
                                Text="{DynamicResource FAS_Gear}"
                                TextColor="{DynamicResource InversePrimaryText}" />
                            <Label
                                FontSize="20"
                                Text="Colaboradores"
                                TextColor="{DynamicResource InversePrimaryText}" />

                        </HorizontalStackLayout>

                    </Border>

                    <buttons:IconButton
                        BackgroundColorCode="Transparent"
                        Event="{Binding SwitchToTableManagerCommand}"
                        FontColorCode="{DynamicResource InversePrimaryText}"
                        FontSize="20"
                        TextContent="Configurar tabela"
                        Unicode="{DynamicResource FAS_Gear}" />

                    <buttons:IconButton
                        BackgroundColorCode="Transparent"
                        Event="{Binding SwitchToShowTablesCommand}"
                        FontColorCode="{DynamicResource InversePrimaryText}"
                        FontSize="20"
                        TextContent="Visualizar tabela"
                        Unicode="{DynamicResource FAS_Gear}" />

                </VerticalStackLayout>
                <buttons:IconButton
                    Grid.Row="1"
                    BackgroundColorCode="Transparent"
                    Event="{Binding SwitchToSettingsCommand}"
                    FontColorCode="{DynamicResource InversePrimaryText}"
                    FontSize="20"
                    TextContent="Configurações"
                    Unicode="{DynamicResource FAS_Gear}" />
            </Grid>

        </Border>

        <Border
            Grid.Column="1"
            Padding="5"
            BackgroundColor="{DynamicResource Secondary}"
            StrokeThickness="0">

            <Grid ColumnDefinitions="2*,*">

                <!--  forms  -->
                <VerticalStackLayout Padding="20">

                    <Label
                        FontAttributes="Bold"
                        FontSize="35"
                        Text="Cadastrar novo colaborador"
                        TextColor="{DynamicResource PrimaryText}" />

                    <Grid
                        ColumnDefinitions="1.5*,*"
                        ColumnSpacing="5"
                        RowDefinitions="*,Auto"
                        RowSpacing="5">

                        <VerticalStackLayout Spacing="10">

                            <elements:Textbar
                                TextContent="{Binding Name, Mode=TwoWay}"
                                TextTitle="Nome do colaborador"
                                Unicode="{DynamicResource FAS_Gear}" />

                            <Picker
                                Title="Cargo/Posição"
                                BackgroundColor="{DynamicResource Primary}"
                                SelectedItem="{Binding Position}"
                                TextColor="Black">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Encarregado</x:String>
                                        <x:String>Lider</x:String>
                                        <x:String>Operador</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>

                        </VerticalStackLayout>

                        <Border
                            Grid.Column="1"
                            BackgroundColor="{DynamicResource Primary}"
                            Style="{StaticResource Border.Radius8}">

                            <Grid RowDefinitions="Auto,*,Auto" RowSpacing="10">

                                <Label
                                    FontSize="20"
                                    HorizontalTextAlignment="Center"
                                    Text="Foto do colaborador" />

                                <Border
                                    Grid.Row="1"
                                    Padding="0"
                                    BackgroundColor="{DynamicResource Primary}"
                                    HeightRequest="200"
                                    Style="{DynamicResource Border.Circle}"
                                    WidthRequest="200">

                                    <Label
                                        Padding="5"
                                        FontFamily="FAS"
                                        FontSize="200"
                                        HorizontalOptions="Center"
                                        Text="{DynamicResource FAS_User}"
                                        VerticalOptions="Center" />

                                </Border>

                                <buttons:IconButton
                                    Grid.Row="2"
                                    BackgroundColorCode="{DynamicResource Secondary}"
                                    Event="{Binding UpdateIconCommand}"
                                    FontSize="20"
                                    TextContent="Selecionar foto"
                                    Unicode="{DynamicResource FAS_CirclePlus}" />

                            </Grid>

                        </Border>

                    </Grid>

                    <buttons:IconButton
                        BackgroundColorCode="{DynamicResource Normal}"
                        Event="{Binding CreateNewEmployeeCommand}"
                        FontSize="20"
                        IsVisible="{Binding IsInCreateMode}"
                        TextContent="Criar processo"
                        Unicode="{DynamicResource FAS_CirclePlus}" />

                    <Grid
                        ColumnDefinitions="*,*"
                        ColumnSpacing="6"
                        IsVisible="{Binding IsInEditMode}">

                        <buttons:IconButton
                            BackgroundColorCode="{DynamicResource Error}"
                            Event="{Binding CancelUpdateEmployeeCommand}"
                            FontSize="20"
                            TextContent="Cancelar alterações"
                            Unicode="{DynamicResource FAS_CircleXmark}" />

                        <buttons:IconButton
                            Grid.Column="1"
                            BackgroundColorCode="{DynamicResource Success}"
                            Event="{Binding SaveUpdateEmployeeCommand}"
                            FontSize="20"
                            TextContent="Salvar alterações"
                            Unicode="{DynamicResource FAS_CircleCheck}" />

                    </Grid>

                </VerticalStackLayout>

                <!--  List  -->
                <Border
                    Grid.Column="1"
                    BackgroundColor="{DynamicResource Primary}"
                    Style="{DynamicResource Border.Radius14}">

                    <Grid RowDefinitions="Auto,*" RowSpacing="10">

                        <buttons:SearchBar SearchText="{Binding SearchProcessText, Mode=TwoWay}" />

                        <CollectionView
                            Grid.Row="1"
                            HorizontalOptions="Fill"
                            ItemTemplate="{DynamicResource ToastEmployeeStyle}"
                            ItemsSource="{Binding FiltredEmployeeList}"
                            SelectionMode="None"
                            VerticalOptions="Fill"
                            VerticalScrollBarVisibility="Never">

                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    Orientation="Vertical"
                                    Span="1"
                                    VerticalItemSpacing="5" />
                            </CollectionView.ItemsLayout>

                        </CollectionView>

                    </Grid>

                </Border>

            </Grid>

        </Border>

    </Grid>

</ContentPage>