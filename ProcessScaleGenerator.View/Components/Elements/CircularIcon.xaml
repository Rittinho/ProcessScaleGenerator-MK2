<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ProcessScaleGenerator.View.Components.Elements.CircularIcon"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Border
        x:Name="externalBorder"
        HeightRequest="{Binding Path=IconSize, Source={x:Reference Root}}"
        StrokeShape="1000000000000"
        StrokeThickness="0"
        WidthRequest="{Binding Path=IconSize, Source={x:Reference Root}}">

        <Border
            Background="#323232"
            StrokeShape="1000000000000"
            StrokeThickness="0">

            <Label
                x:Name="icon"
                FontFamily="FAS"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

        </Border>

    </Border>

</ContentView>
