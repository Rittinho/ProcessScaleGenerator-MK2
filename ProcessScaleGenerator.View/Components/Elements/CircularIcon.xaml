<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ProcessScaleGenerator.View.Components.Elements.CircularIcon"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Border
        x:Name="externalBorder"
        BackgroundColor="{DynamicResource PrimaryText}"
        HeightRequest="{Binding Path=IconSize, Source={x:Reference Root}}"
        StrokeThickness="0"
        WidthRequest="{Binding Path=IconSize, Source={x:Reference Root}}">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="9999" />
        </Border.StrokeShape>

        <Border Background="{DynamicResource Tertiary}" StrokeThickness="0">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="9999" />
            </Border.StrokeShape>

            <Label
                x:Name="icon"
                FontFamily="FAS"
                HorizontalOptions="Center"
                TextColor="{DynamicResource PrimaryText}"
                VerticalOptions="Center" />

        </Border>

    </Border>

</ContentView>
