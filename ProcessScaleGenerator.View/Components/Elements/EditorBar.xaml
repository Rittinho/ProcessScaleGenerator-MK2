<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ProcessScaleGenerator.View.Components.Elements.EditorBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <VerticalStackLayout>

        <Label FontSize="18" Text="{Binding Path=TextTitle, Source={x:Reference Root}}" />

        <Border
            Padding="0"
            BackgroundColor="{DynamicResource Primary}"
            HorizontalOptions="Fill"
            Style="{DynamicResource Border.Radius8}">

            <Grid ColumnDefinitions="Auto,*">

                <Border BackgroundColor="{DynamicResource Tertiary}" StrokeThickness="0">

                    <Label
                        Padding="0"
                        FontFamily="{Binding Path=UnicodeFamily, Source={x:Reference Root}}"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        MinimumWidthRequest="40"
                        Text="{Binding Path=Unicode, Source={x:Reference Root}}"
                        TextColor="{Binding Path=UnicodeColor, Source={x:Reference Root}}"
                        VerticalTextAlignment="Center" />

                </Border>

                <Editor
                    Grid.Column="1"
                    FontSize="20"
                    HeightRequest="{Binding Path=HeightEditor, Source={x:Reference Root}}"
                    Text="{Binding Path=TextContent, Source={x:Reference Root}}" />

            </Grid>

        </Border>

    </VerticalStackLayout>

</ContentView>
