<?xml version="1.0" encoding="utf-8" ?>
<base:ButtonBaseView
    x:Class="ProcessScaleGenerator.View.Components.Buttons.FreshSwitch"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:ProcessScaleGenerator.View.Components.Buttons.Base"
    x:Name="Root">

    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="{Binding Source={x:Reference Root}, Path=Spacing}">

        <Label Text="{Binding Source={x:Reference Root}, Path=LeftText}" />

        <Border
            x:Name="SwitchRoot"
            Grid.Column="1"
            Padding="2"
            BackgroundColor="{Binding Source={x:Reference Root}, Path=BackgroundColor}"
            HeightRequest="20"
            Stroke="{Binding Source={x:Reference Root}, Path=OnColor}"
            StrokeShape="9999"
            StrokeThickness="1"
            WidthRequest="40">

            <HorizontalStackLayout Spacing="5">

                <Border
                    x:Name="Thumb"
                    Padding="7"
                    StrokeShape="9999"
                    StrokeThickness="0" />

            </HorizontalStackLayout>

            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Border.GestureRecognizers>

        </Border>

        <Label Grid.Column="2" Text="{Binding Source={x:Reference Root}, Path=RightText}" />

    </Grid>


</base:ButtonBaseView>
