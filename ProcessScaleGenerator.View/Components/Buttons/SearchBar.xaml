<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ProcessScaleGenerator.View.Components.Buttons.SearchBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Border
        Padding="5,0,0,0"
        BackgroundColor="{DynamicResource Primary}"
        HorizontalOptions="Fill"
        Style="{DynamicResource Border.Radius8}">

        <Grid ColumnDefinitions="*,Auto">

            <Entry Text="{Binding Path=SearchText, Source={x:Reference Root}}" />

            <Button
                Grid.Column="1"
                BackgroundColor="{DynamicResource Secondary}"
                Command="{Binding Path=Event, Source={x:Reference Root}}"
                CornerRadius="0"
                FontFamily="FAS"
                Text="{DynamicResource FAS_MagnifyingGlass}"
                TextColor="{DynamicResource PrimaryDarkText}" />

        </Grid>

    </Border>

</ContentView>
