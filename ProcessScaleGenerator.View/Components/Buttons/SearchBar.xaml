<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ProcessScaleGenerator.View.Components.Buttons.SearchBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Border
        Padding="0,-5,0,-5"
        BackgroundColor="{DynamicResource Tertiary}"
        HorizontalOptions="Fill"
        Style="{DynamicResource Border.Radius8}">

        <Grid ColumnDefinitions="*,Auto,Auto">

            <Entry Text="{Binding Path=SearchText, Source={x:Reference Root}}" />

            <Border
                Grid.Column="1"
                Margin="0,10,0,10"
                StrokeThickness=".5" />

            <Button
                Grid.Column="2"
                BackgroundColor="Transparent"
                Command="{Binding Path=Event, Source={x:Reference Root}}"
                CornerRadius="0"
                FontFamily="PPO"
                FontSize="20"
                Text="{DynamicResource PPO_MagnifyingGlass}"
                TextColor="{DynamicResource PrimaryText}" />

        </Grid>

    </Border>

</ContentView>
