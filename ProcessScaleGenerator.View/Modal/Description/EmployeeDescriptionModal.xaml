<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ProcessScaleGenerator.View.Modal.Description.EmployeeDescriptionModal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:ProcessScaleGenerator.View.Components.Buttons"
    xmlns:elements="clr-namespace:ProcessScaleGenerator.View.Components.Elements"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Padding="-20"
    BackgroundColor="{AppThemeBinding Light={DynamicResource Primary},
                                      Dark={DynamicResource Primary}}">


    <VerticalStackLayout>

        <!--  Conteudo  -->
        <VerticalStackLayout>

            <Label
                FontAttributes="Bold"
                FontSize="50"
                HorizontalOptions="Center"
                Text="{Binding Name}"
                VerticalOptions="Center" />

            <Label
                FontSize="30"
                HorizontalOptions="Center"
                Text="{Binding Position}"
                VerticalOptions="Center" />

        </VerticalStackLayout>

        <!--  BotÃ£o de editar  -->
        <buttons:IconButton
            Command="{Binding CloseShowCommand}"
            HorizontalOptions="End"
            Style="{StaticResource BackButton}"
            Text="Voltar" />

    </VerticalStackLayout>

</toolkit:Popup>
