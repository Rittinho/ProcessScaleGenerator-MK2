<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ProcessScaleGenerator.View.Modal.Description.TableGroupModal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:ProcessScaleGenerator.View.Components.Buttons"
    xmlns:elements="clr-namespace:ProcessScaleGenerator.View.Components.Elements"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Padding="-20"
    BackgroundColor="{AppThemeBinding Light={DynamicResource Primary},
                                      Dark={DynamicResource Primary}}">
    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="5">

        <Border BackgroundColor="{DynamicResource Secondary}" Style="{DynamicResource Border.Radius14}">

            <Grid ColumnDefinitions="*,Auto,*,Auto,*,Auto,*">

                <VerticalStackLayout Spacing="5">
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontFamily="PPO"
                            FontSize="40"
                            HorizontalTextAlignment="Center"
                            Text="{DynamicResource PPO_CalendarDots}"
                            VerticalTextAlignment="Center" />
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Criação"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <Label
                        FontAttributes="Bold"
                        FontSize="25"
                        HorizontalTextAlignment="Center"
                        Text="{Binding ToyotaTableGroup.CreationDate}"
                        VerticalTextAlignment="Center" />

                </VerticalStackLayout>

                <Border
                    Grid.Column="1"
                    Margin="0,10,0,10"
                    StrokeShape="24" />

                <VerticalStackLayout Grid.Column="2" Spacing="5">

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontFamily="PPO"
                            FontSize="40"
                            HorizontalTextAlignment="Center"
                            Text="{DynamicResource PPO_EyeSlash}"
                            VerticalTextAlignment="Center" />
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Ocultos"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Processos: "
                            VerticalTextAlignment="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ToyotaTableGroup.HiddenProcessCount}"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Colaboradores: "
                            VerticalTextAlignment="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ToyotaTableGroup.HiddenEmployersCount}"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>



                </VerticalStackLayout>

                <Border
                    Grid.Column="3"
                    Margin="0,10,0,10"
                    StrokeShape="24" />

                <VerticalStackLayout Grid.Column="4" Spacing="5">

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontFamily="PPO"
                            FontSize="40"
                            HorizontalTextAlignment="Center"
                            Text="{DynamicResource PPO_Stack}"
                            VerticalTextAlignment="Center" />
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Totais"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Tabelas: "
                            VerticalTextAlignment="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ToyotaTableGroup.TotalTables}"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Processos: "
                            VerticalTextAlignment="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ToyotaTableGroup.TotalProcess}"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Colaboradores: "
                            VerticalTextAlignment="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ToyotaTableGroup.TotalEmployers}"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>

                <Border
                    Grid.Column="5"
                    Margin="0,10,0,10"
                    StrokeShape="24" />

                <VerticalStackLayout Grid.Column="6" Spacing="5">

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontFamily="PPO"
                            FontSize="40"
                            HorizontalTextAlignment="Center"
                            Text="{DynamicResource PPO_ChartLine}"
                            VerticalTextAlignment="Center" />
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Media"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="Colaboradores: "
                            VerticalTextAlignment="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ToyotaTableGroup.MediaEmployersPerProcess}"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>

            </Grid>

        </Border>

        <ScrollView
            Grid.Row="1"
            Padding="10"
            Orientation="Vertical">

            <VerticalStackLayout x:Name="Container" />

        </ScrollView>

        <buttons:IconButton
            x:Name="BackButton"
            Grid.Row="2"
            Command="{Binding CancelCommand}"
            HorizontalOptions="End"
            Style="{StaticResource BackButton}"
            Text="Voltar" />

    </Grid>

</toolkit:Popup>
