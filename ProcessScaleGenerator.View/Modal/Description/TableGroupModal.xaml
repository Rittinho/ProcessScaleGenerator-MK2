<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ProcessScaleGenerator.View.Modal.Description.TableGroupModal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:ProcessScaleGenerator.View.Components.Buttons"
    xmlns:elements="clr-namespace:ProcessScaleGenerator.View.Components.Elements"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="{DynamicResource Tertiary}"
    WidthRequest="1280">

    <Grid RowDefinitions="Auto,*">

        <Border Style="{DynamicResource Border.Radius14}">

            <Grid ColumnDefinitions="*,*,*">

                <Label Text="IH`P^K" />
                <Label Grid.Column="1" Text="IH`P^K" />
                <Label Grid.Column="2" Text="IH`P^K" />

            </Grid>

        </Border>
        <ScrollView Grid.Row="1">

            <VerticalStackLayout x:Name="Container" />

        </ScrollView>

    </Grid>

</toolkit:Popup>
