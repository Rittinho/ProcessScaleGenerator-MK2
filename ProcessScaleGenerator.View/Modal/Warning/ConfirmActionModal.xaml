<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ProcessScaleGenerator.View.Modal.Warning.ConfirmActionModal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:ProcessScaleGenerator.View.Components.Buttons"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Padding="-20"
    x:TypeArguments="system:Boolean"
    BackgroundColor="{AppThemeBinding Light={DynamicResource Primary},
                                      Dark={DynamicResource Primary}}">


    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="10">

        <!--  Titulo  -->
        <Label
            x:Name="TitleLabel"
            FontAttributes="Bold"
            FontSize="35"
            HorizontalOptions="Center"
            TextColor="{DynamicResource PrimaryText}"
            VerticalOptions="Center" />

        <!--  Descrição da ação  -->
        <Label
            x:Name="DescriptionLabel"
            Grid.Row="1"
            FontSize="20"
            HorizontalOptions="Center"
            TextColor="{DynamicResource PrimaryText}"
            VerticalOptions="Center" />

        <!--  Botão de voltar  -->
        <buttons:IconButton
            x:Name="BackButton"
            Grid.Row="2"
            Command="{Binding CancelCommand}"
            HorizontalOptions="End"
            Style="{StaticResource BackButton}"
            Text="Voltar" />

        <!--  Botões de ação  -->
        <HorizontalStackLayout
            x:Name="ActionButtons"
            Grid.Row="2"
            HorizontalOptions="Center"
            Spacing="10">

            <buttons:IconButton
                Grid.Row="1"
                Command="{Binding CancelCommand}"
                Style="{StaticResource CancelButton}"
                Text="Cancelar" />

            <buttons:IconButton
                Grid.Row="1"
                Command="{Binding ConfirmCommand}"
                Style="{StaticResource AcceptButton}"
                Text="Aceitar" />

        </HorizontalStackLayout>

    </Grid>

</toolkit:Popup>
