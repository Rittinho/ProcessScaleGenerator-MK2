    <!--  =========================================  -->
    <!--  ============  BASE BORDER  ==============  -->
    <!--  =========================================  -->

    <Style x:Key="Border.Base" TargetType="Border">
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!--  =========================================  -->
    <!--  =========  LARGE (24px) STYLES  ==========  -->
    <!--  =========================================  -->

    <Style
        x:Key="Border.Radius24"
        BasedOn="{StaticResource Border.Base}"
        TargetType="Border">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="{StaticResource CornerRadius.Large}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="Border.Radius24.LeftSharp"
