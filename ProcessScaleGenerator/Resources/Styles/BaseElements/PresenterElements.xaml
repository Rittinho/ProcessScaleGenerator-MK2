<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  =========================================  -->
    <!--  ===========  CORNER RADIUS TOKENS  ======  -->
    <!--  =========================================  -->

    <!--  Tokens de CornerRadius por tamanho  -->
    <CornerRadius x:Key="CornerRadius.Large">24</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium">14</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Small">8</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Circle">9999</CornerRadius>

    <!--  CornerRadius personalizados por canto (Large)  -->
    <CornerRadius x:Key="CornerRadius.Large.LeftSharp">4,24,24,24</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large.RightSharp">24,4,24,24</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large.DownLeftSharp">24,24,4,24</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large.DownRightSharp">24,24,24,4</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large.LeftRightSharp">4,24,24,4</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large.RightLeftSharp">24,4,4,24</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large.RightLeftShar">24,4,4,24</CornerRadius>

    <!--  CornerRadius personalizados por canto (Medium)  -->
    <CornerRadius x:Key="CornerRadius.Medium.LeftSharp">4,14,14,14</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium.RightSharp">14,4,14,14</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium.DownLeftSharp">14,14,4,14</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium.DownRightSharp">14,14,14,4</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium.LeftRightSharp">4,14,14,4</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium.RightLeftSharp">14,4,4,14</CornerRadius>

    <!--  CornerRadius personalizados por canto (Small)  -->
    <CornerRadius x:Key="CornerRadius.Small.LeftSharp">2,8,8,8</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Small.RightSharp">8,2,8,8</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Small.DownLeftSharp">8,8,2,8</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Small.DownRightSharp">8,8,8,2</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Small.LeftRightSharp">2,8,8,2</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Small.RightLeftSharp">8,2,2,8</CornerRadius>

    <!--  CornerRadius personalizados por canto (Circle)  -->
